{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalDependencies": [".env"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$"],
			"env": [
				"NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
				"CLERK_SECRET_KEY",
				"NEXT_PUBLIC_CONVEX_URL",
				"NEXT_PUBLIC_CONVEX_HOSTNAME",
				"RESEND_API_KEY",
				"SENTRY_AUTH_TOKEN",
				"CONVEX_DEPLOY_KEY"
			],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"]
		},
		"//#format-and-lint": {},
		"//#format-and-lint:fix": {
			"cache": false
		},
		"//#check:all": {},
		"//#check:all:fix": {
			"cache": false
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"check:fix": {
			"dependsOn": ["^check:fix"],
			"cache": false
		}
	}
}
